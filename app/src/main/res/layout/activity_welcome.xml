<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/main_back_image"
    tools:context=".WelcomeActivity">

    <TextView
        android:id="@+id/wel"
        android:text="Welcome"
        android:textSize="120dp"
        android:gravity="center"
        android:fontFamily="@font/ab"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <ImageView
        android:layout_below="@+id/wel"
        android:src="@drawable/cbitss"
        android:layout_marginTop="150dp"
        android:layout_marginBottom="150dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.ebanx.swipebtn.SwipeButton
        android:id="@+id/swipe"
        android:layout_width="match_parent"
        android:layout_gravity="bottom"
        android:layout_height="80dp"
        android:layout_marginStart="140dp"
        android:layout_marginEnd="140dp"
        app:inner_text_color="@android:color/white"
        app:inner_text="SWIPE TO NEXT"
        app:inner_text_size="20sp"
        app:inner_text_bottom_padding="20dp"
        app:inner_text_top_padding="20dp"
        app:button_image_disabled="@drawable/ic_next"
        app:button_image_enabled="@drawable/ic_unlock"
        app:inner_text_background="@drawable/swipe"
        app:button_background="@drawable/shape_button"
        app:button_left_padding="10dp"
        app:button_right_padding="10dp"
        app:button_bottom_padding="5dp"
        app:button_top_padding="10dp"
        />

</LinearLayout>