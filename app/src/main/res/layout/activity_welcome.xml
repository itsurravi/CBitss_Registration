<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/welcome"
    tools:context=".WelcomeActivity">

    <com.ebanx.swipebtn.SwipeButton
        android:id="@+id/swipe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="140dp"
        android:layout_marginEnd="140dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="420dp"
        app:inner_text_color="@android:color/white"
        app:inner_text="SWIPE TO NEXT"
        app:inner_text_size="20sp"
        app:inner_text_bottom_padding="20dp"
        app:inner_text_top_padding="20dp"
        app:button_image_disabled="@drawable/ic_next"
        app:button_image_enabled="@drawable/ic_unlock"
        app:inner_text_background="@drawable/shape_rounded"
        app:button_background="@drawable/shape_button"
        app:button_left_padding="20dp"
        app:button_right_padding="20dp"
        app:button_bottom_padding="20dp"
        app:button_top_padding="20dp"
        />

</RelativeLayout>